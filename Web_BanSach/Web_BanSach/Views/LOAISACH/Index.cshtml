@model IEnumerable<Web_BanSach.LOAISACH>

@{
    ViewBag.Title = "Edit Loại";
    Layout = "~/Views/Shared/_LayoutSach.cshtml";
}

<h2>Loại sách Admin</h2>
<span>
    @Html.ActionLink("Thêm Loại", "ThemLoai")
</span>
<table class="table">
    <tr>
        <th>
            Mã loại
        </th>
        <th>
            Tên Loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TENLOAI)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "ViewEdit", new { Loaisach_id = item.MALOAI }) |
            @Html.ActionLink("Xoá", "ViewDelete", new { Loaisach_id = item.MALOAI })
        </td>
    </tr>
}

</table>
