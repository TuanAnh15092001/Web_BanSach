                    <a class="text-sm\/6 font-semibold flex items-center gap-1 menu-item " href="@Url.Action("Index","LienHe")" as="button" type="button" exact="false" exactquery="false" exacthash="false">
                        <!--[-->
                        Liên Hệ
                        <!--[-->
                    </a>

                </li>
            </ul>
            @*mennu đăng nhập*@
            <div class="flex items-center justify-end lg\:flex-1 gap-1\.5 ">
                <div class=" lg:flex items-center gap-1\.5">
                    <button class="srch-icon"><i class="fa-solid fa-magnifying-glass"></i></button>
                    @if (Session["TEN"] != null)
                    {
                        <span class="btn" style="color:#36eb21">Xin chào, @Session["TEN"]</span>
                        <a style="color:aliceblue" href="@Url.Action("DangXuat", "Acount")" class="btn-login">Đăng xuất</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login","Acount")" style="background-color:darkblue" class="btn-login"> Đăng nhập</a>
                        <a href="@Url.Action("Register","Acount")" class="btn-login">Đăng ký</a>
                    }
                </div>
            </div>
        </div>
    </header>
    <Main>
        <div class="content-wrapper">
            @Html.Action("_DanhMuc", "DanhMuc", new { area = "" })
            @RenderBody()
        </div>
    </Main>
