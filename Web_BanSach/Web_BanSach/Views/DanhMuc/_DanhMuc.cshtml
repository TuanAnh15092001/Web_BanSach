<div class="filter-panel">
    <h3>Bộ lọc tìm kiếm</h3>

    <div class="filter-section">
        <label>Theo từ khóa</label>
        <input type="text" placeholder="Tìm kiếm sách">
    </div>

    <div class="filter-section">
        <label>Theo loại</label>
        <div class="filter-options">
            <label><input type="radio" name="type" checked> Tất cả</label>
            <label><input type="radio" name="type"> Bài viết</label>
            <label><input type="radio" name="type"> Sách điện tử</label>
            <label><input type="radio" name="type"> Sách chữ</label>
            <label><input type="radio" name="type"> Sách nói</label>
        </div>
    </div>

    <div class="filter-section">
        <label>Theo chuyên mục</label>
        <select>
            <option>Tìm kiếm chuyên mục</option>
            <option>Văn học</option>
            <option>Khoa học</option>
            <option>Lịch sử</option>
        </select>
    </div>

    <div class="filter-section">
        <label>Theo tác giả</label>
        <select>
            <option>Tìm kiếm tác giả</option>
            <option>Nguyễn Nhật Ánh</option>
            <option>Paulo Coelho</option>
            <option>J.K. Rowling</option>
        </select>
    </div>

    <div class="filter-section">
        <label>Theo bộ 📘 sách</label>
        <select>
            <option>Tìm kiếm bộ sách</option>
            <option>Sách Vật Lí</option>
            <option>Sách Toán</option>
            <option>Sách Lập trình</option>
        </select>
    </div>

    <div class="filter-section">
        <label>Theo giá tiền</label>
        <div class="filter-options">
            <label><input type="radio" name="price" checked> 0 - 20.000₫</label>
            <label><input type="radio" name="price"> 20.000₫ - 50.000₫</label>
            <label><input type="radio" name="price"> 50.000₫ - 100.000₫</label>
            <label><input type="radio" name="price"> > 100.000₫</label>
        </div>
    </div>
</div>

