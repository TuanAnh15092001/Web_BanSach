        <div class="row">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-md-5">
                <div class="card shadow-sm border-0">
                    <img src="~/Content/HinhAnh/@Model.ANHBIA" alt="@Model.TENSACH">
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-7">
                <h2 class="mb-3 text-primary">@Model.TENSACH</h2>
                <h4 class="text-danger fw-bold">@String.Format("{0:#,##0}", @Model.GIABAN) VNĐ</h4>

                <p class="mt-3" style="line-height: 1.8; font-size: 1.1rem; text-align: justify;">
                    @Model.NOIDUNG
                </p>


                <div class="mt-4">
                    <button class="btn btn-success btn-lg px-4">
                        <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                    </button>
                    <a href="#" class="btn btn-outline-secondary btn-lg px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
